              android:background="@android:color/holo_red_light" android:layout_width="60dp"
              android:layout_height="match_parent" android:layout_alignParentRight="true" android:gravity="center"
              android:text="Delete"/>
    <View android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true" android:background="#fff"/>

